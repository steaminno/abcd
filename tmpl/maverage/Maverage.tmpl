{{define "title"}}Create Order Order{{end}}
{{define "head"}}{{end}}
{{ define "content" }}
  {{ template "Header" }}
<div class="card">
  <h3 class="card-header">Lenhas Compradas</h3>
<div class="card-body">
   <div class="card pb-3 pl-3 pr-3">
  <a class="far fa-plus-square btn btn-success" href="/maverage/create">&emsp; Cadastrar Compra De Lenha</a>
 </div> 
<div class="bs-example">
<table id="example" class="table table-striped table table-hover dt-responsive nowrap" cellspacing="0" style="width:100%">
        <thead>
            <tr>
              <th>ID</th>
              <th>Provedor</th>
              <th>Status</th>
              <th>Lado F1</th>
              <th>Lado F2</th>
              <th>Lado M1</th>
              <th>Lado M2</th>
              <th>Lado T1</th>
              <th>Lado T2</th>
              <th>Média</th>
              <th>Comprimento</th>
              <th>largura</th>
              <th>Medida Total</th>
              <th>Custo M3</th>
              <th>Custo Total</th>
              <th>Data Compra</th>
              <th>Data Entrega</th>
              <th>Obs</th>
              <th>Ações</th>
            </tr>
         </thead>
       <tbody>
      
      {{ range .Maverage}}
        <tr>
          <td>{{ .ID }} </td>
          <td>{{ .Provider }} </td>
          <td>{{ .Status }} </td>
          <td>{{ .Af1}} </td>
          <td>{{ .Af2}} </td> 
          <td>{{ .Am1}} </td> 
          <td>{{ .Am2}} </td> 
          <td>{{ .At1}} </td> 
          <td>{{ .At2}} </td>
          <td>{{ .Media}} </td> 
          <td>{{ .Comprimento}} </td> 
          <td>{{ .Largura}} </td>
          <td>{{ .Totalmedida}} </td> 
          <td>{{ .Pmc}} </td>
          <td>{{ .Totalprice}} </td> 
          <td>{{ .Dtcompra}} </td> 
          <td>{{ .Dtentrega}} </td> 
          <td>{{ .Obs}} </td> 
          <td><a href="/maverageshow?id={{ .ID}}">Ver</a> | <a href="/maverageedit?id={{ .ID }}">Editar</a></td>

        </tr>
    {{ end }}
       </tbody>
    </table>

{{ template "Js" }}
<script>
	$(document).ready(function() {
	    var table = $('#example').DataTable( {
	        lengthChange: false,
	        buttons: [ 'csv', 'pdf', 'colvis' ]
	    } );
	 
	    table.buttons().container()
	        .appendTo( '#example_wrapper .col-md-6:eq(0)' );
	} );
     </script>
</div>
<div class="dropdown-divider"></div>
   {{ template "Footer" }}
{{ end }}    
